<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <FrameLayout
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/tab" />

  <LinearLayout
    android:id="@+id/tab"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="2dp">

    <LinearLayout
      android:id="@+id/tab_home"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/tab_menu_home"
        tools:ignore="ContentDescription" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="最右"
        android:textColor="@color/tab_menu_text"
        android:textSize="12sp"
        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/tab_community"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/tab_menu_community"
        tools:ignore="ContentDescription" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="社区"
        android:textColor="@color/tab_menu_text"
        android:textSize="12sp"
        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
    </LinearLayout>

    <ImageView
      android:id="@+id/add"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_gravity="center_vertical"
      android:paddingBottom="5dp"
      android:scaleType="centerInside"
      android:src="@mipmap/add"
      tools:ignore="ContentDescription" />

    <LinearLayout
      android:id="@+id/tab_message"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/tab_menu_message"
        tools:ignore="ContentDescription" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="消息"
        android:textColor="@color/tab_menu_text"
        android:textSize="12sp"
        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/tab_my"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/tab_menu_my"
        tools:ignore="ContentDescription" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="我的"
        android:textColor="@color/tab_menu_text"
        android:textSize="12sp"
        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>