<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:id="@+id/top_item"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:columnCount="2"
  android:orientation="horizontal"
  android:rowCount="3">

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_column="0"
    android:layout_margin="5dp"
    android:layout_columnWeight="1"
    android:layout_row="0"
    android:background="@drawable/community_make_friends_shape"
    android:gravity="center"
    android:padding="10dp">

    <ImageView
      android:id="@+id/image"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:scaleType="fitCenter"
      android:src="@mipmap/smiling_face"
      tools:ignore="ContentDescription" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/image"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@id/image"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="交友"
      android:textColor="@color/white"
      android:textSize="14sp"
      android:textStyle="bold"
      tools:ignore="HardcodedText" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/image"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@+id/image"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="动态、纸飞机"
      android:textColor="@color/white"
      android:textSize="12sp"
      tools:ignore="HardcodedText" />
  </RelativeLayout>

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_column="1"
    android:layout_margin="5dp"
    android:layout_columnWeight="1"
    android:layout_row="0"
    android:background="@drawable/community_find_resource_shape"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
      android:id="@+id/image1"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:scaleType="fitCenter"
      android:src="@mipmap/search"
      tools:ignore="ContentDescription" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/image1"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@id/image1"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="找资源"
      android:textColor="@color/white"
      android:textSize="14sp"
      android:textStyle="bold"
      tools:ignore="HardcodedText" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/image1"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@+id/image1"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="头像、表情包"
      android:textColor="@color/white"
      android:textSize="12sp"
      tools:ignore="HardcodedText" />
  </RelativeLayout>

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_column="0"
    android:layout_margin="5dp"
    android:layout_columnWeight="1"
    android:layout_row="1"
    android:background="@drawable/community_space_shape"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
      android:id="@+id/image2"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:scaleType="fitCenter"
      android:src="@mipmap/tree_hole"
      tools:ignore="ContentDescription" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/image2"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@id/image2"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="树洞"
      android:textColor="@color/white"
      android:textSize="14sp"
      android:textStyle="bold"
      tools:ignore="HardcodedText" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/image2"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@+id/image2"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="暖心秘密空间"
      android:textColor="@color/white"
      android:textSize="12sp"
      tools:ignore="HardcodedText" />
  </RelativeLayout>

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_column="1"
    android:layout_columnWeight="1"
    android:layout_margin="5dp"
    android:layout_row="1"
    android:background="@drawable/community_grass_shape"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
      android:id="@+id/image3"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:scaleType="fitCenter"
      android:src="@mipmap/seeding"
      tools:ignore="ContentDescription" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/image3"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@id/image3"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="种草"
      android:textColor="@color/white"
      android:textSize="14sp"
      android:textStyle="bold"
      tools:ignore="HardcodedText" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/image3"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@+id/image3"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="剁手经验交流"
      android:textColor="@color/white"
      android:textSize="12sp"
      tools:ignore="HardcodedText" />
  </RelativeLayout>

  <View
    android:layout_width="wrap_content"
    android:layout_height="5dp"
    android:layout_column="0"
    android:layout_columnSpan="2"
    android:layout_marginTop="10dp"
    android:layout_row="2"
    android:background="#F9F9F7"
    android:layout_marginBottom="10dp"/>
</GridLayout>